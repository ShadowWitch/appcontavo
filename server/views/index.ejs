<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./styles.css" />
    <title>Document</title>

    <style>
        * {
            box-sizing: content-box;
        }

        html {
            text-align: center;
        }

        .inputs {
            display: block;
            margin-left: auto;
            margin-right: auto;
            margin-bottom: 1rem;
        }

        .boton {
            padding: 0.2rem;
        }

    </style>
    
  </head>
  <body>
    <h1>Login</h1>
    <form action="">
      <label for="usuario">Usuario:</label>
      <input type="text" name="usuario" id="usuario" class="inputs" required />

      <label for="email">Email:</label>
      <input type="email" name="email" id="email" class="inputs" required />

      <label for="password">Contrase√±a:</label>
      <input
        type="password"
        name="password"
        id="password"
        class="inputs"
        required
      />

      <input type="submit" value="Enviar" id="" class="boton" />
    </form>

    <button id="envPOST">Enviar POST</button>


    <script>
      const envPOST = document.getElementById('envPOST')

      envPOST.addEventListener('click', async e => {

        console.log("Hiola");
        const datos = await fetch('https://contavo2.herokuapp.com/users', {
          method:'post',
          headers: {
            'Content-Type':'application/json'
          },
          body: JSON.stringify({
             username: "holamundo",
             password: "hola123",
             email: "hgola@gmail.com"
          })
        })

        const res = await datos.json();
        console.log(res)
        
      })


    </script>

  </body>
</html>
